<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_friend"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/txtv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="90dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="#224B66"
            tools:ignore="RtlSymmetry"
            android:layout_marginStart="90dp" />

        <TextView
            android:id="@+id/txtv_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="-20dp"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"
            android:layout_marginStart="90dp"
            android:paddingStart="10dp" />

    </LinearLayout>

<!--    <androidx.viewpager.widget.RecyclerView-->
<!--        android:id="@+id/vp_options"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_below="@+id/ll_contact" />-->

    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_contact"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chat" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/phone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/film" />

    </LinearLayout>


</RelativeLayout>